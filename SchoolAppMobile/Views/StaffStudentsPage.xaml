<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.StaffStudentsPage"
             Title="My Students">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="My Students" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

        <CollectionView x:Name="StudentsListView" SelectionMode="Single"
                        SelectionChanged="OnStudentSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <Label Text="{Binding FullName}" FontSize="18" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BotÃ£o voltar -->
        <Button Text="Back to Home"
                Clicked="OnBackToHomeClicked"
                BackgroundColor="DarkSlateBlue"
                TextColor="White"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
