<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.MarksPage"
             Title="My Marks">

    <StackLayout Padding="10">
        <CollectionView x:Name="MarksCollection" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="Gray">
                        <StackLayout>
                            <Label Text="{Binding Subject}" FontAttributes="Bold" />
                            <Label Text="{Binding Value, StringFormat='Grade: {0:F1}'}" />
                            <Label Text="{Binding IsPassed, StringFormat='Passed: {0}'}" />
                            <Label Text="{Binding Date, StringFormat='Date: {0}'}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BotÃ£o fora da CollectionView -->
        <Button Text="Back to Home"
                Clicked="OnBackToHomeClicked"
                BackgroundColor="DarkSlateBlue"
                TextColor="White"
                Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
