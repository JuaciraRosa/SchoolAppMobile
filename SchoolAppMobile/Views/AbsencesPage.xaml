<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.AbsencesPage"
      Title="My Absences">

    <CollectionView x:Name="AbsencesCollection" Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" Padding="10" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding Subject}" FontAttributes="Bold" />
                        <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" />
                        <Label Text="{Binding Justified, StringFormat='Justified: {0}'}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>