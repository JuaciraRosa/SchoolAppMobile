<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.ResetPasswordPage"
             Title="Reset Password">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="New Password" />
        <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Enter new password" />

        <Label Text="Confirm Password" />
        <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm new password" />

        <Button Text="Reset Password" Clicked="OnResetPasswordClicked" />
    </VerticalStackLayout>
</ContentPage>