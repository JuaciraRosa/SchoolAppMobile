<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.AveragesPage"
              Title="Student Averages">
    <StackLayout Padding="20">
        <Label Text="Averages by Student and Subject" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <CollectionView x:Name="AveragesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding StudentName}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding SubjectName}" />
                            <Label Text="{Binding Average, StringFormat='Average: {0:F2}'}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>