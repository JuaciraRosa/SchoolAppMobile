<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.EnrollmentRequestsPage"
             Title="Enrollment Requests">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Pending Enrollment Requests" 
                   FontSize="24" FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="RequestsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Margin="5" Padding="10">
                            <StackLayout>
                                <Label Text="{Binding StudentName}" FontAttributes="Bold" FontSize="18"/>
                                <Label Text="{Binding CourseName}" />
                                <Label Text="{Binding Message}" FontAttributes="Italic" />
                                <Label Text="{Binding Status}" TextColor="Gray"/>

                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Button Text="Approve" Clicked="OnApproveClicked"/>
                                    <Button Text="Reject" Clicked="OnRejectClicked"/>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Back to Home"
      Clicked="OnBackToHomeClicked"
      BackgroundColor="DarkSlateBlue"
      TextColor="White"
      Margin="0,20,0,0" />
        </StackLayout>
       
    </ScrollView>

   
</ContentPage>
