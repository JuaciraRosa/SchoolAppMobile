<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.PublicSubjectsPage"
             Title="Subjects">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label x:Name="Header" FontSize="20" FontAttributes="Bold" />
        <ActivityIndicator x:Name="Loading" IsRunning="False" IsVisible="False" />
        <Label x:Name="EmptyLabel" Text="No subjects found." IsVisible="False" HorizontalOptions="Center" />
        <RefreshView x:Name="Refresh" IsRefreshing="False">
            <CollectionView x:Name="SubjectsList" SelectionMode="Single" SelectionChanged="OnSubjectSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="12" Margin="4" BorderColor="LightGray">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                                <Label Text="{Binding Description}" FontSize="13" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </VerticalStackLayout>
</ContentPage>
