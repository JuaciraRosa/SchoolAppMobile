<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.ProfilePage"
      Title="My Profile">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Image x:Name="ProfileImage"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Aspect="AspectFill"
                   BackgroundColor="LightGray"
                   Margin="0,20,0,0"/>

            <Label x:Name="NameLabel" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label x:Name="EmailLabel" FontSize="16" HorizontalOptions="Center"/>
            <Label x:Name="CourseLabel" FontSize="16" HorizontalOptions="Center"/>

            <Button Text="Back to Home" Clicked="OnBackToHomeClicked"
                    BackgroundColor="DarkSlateBlue" TextColor="White" />
            <Button Text="Edit Profile"
        Clicked="OnEditProfileClicked"
        BackgroundColor="DarkBlue"
        TextColor="White"
        Margin="0,20,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>