<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.ProfilePage"
                   Title="My Profile">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Label Text="Student Profile" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Image x:Name="ProfilePhoto" HeightRequest="120" WidthRequest="120" HorizontalOptions="Center" />

            <Label x:Name="NameLabel" FontSize="18" />
            <Label x:Name="EmailLabel" FontSize="18" />
            <Label x:Name="CourseLabel" FontSize="18" />
        </StackLayout>
    </ScrollView>
</ContentPage>