<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolAppMobile.Views.RegisterMarkPage"
            Title="Register Mark">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Register Mark" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry x:Name="StudentIdEntry" Placeholder="Student ID" Keyboard="Numeric" />
        <Entry x:Name="SubjectIdEntry" Placeholder="Subject ID" Keyboard="Numeric" />
        <Entry x:Name="MarkValueEntry" Placeholder="Mark Value" Keyboard="Numeric" />

        <Button Text="Submit" Clicked="OnSubmitClicked" BackgroundColor="DarkSlateBlue" TextColor="White"/>
    </StackLayout>
</ContentPage>