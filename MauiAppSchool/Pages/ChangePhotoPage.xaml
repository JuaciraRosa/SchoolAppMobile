<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ChangePhotoPage"
             Title="ChangePhotoPage">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Image x:Name="Preview" HeightRequest="160"/>
            <Button Text="Pick photo" Clicked="OnPick"/>
            <Button Text="Save"      Clicked="OnSave" IsEnabled="False"/>

            <Label x:Name="Msg"  TextColor="Green" IsVisible="False"/>
            <Label x:Name="Err"  TextColor="Red"   IsVisible="False"/>

            <Button x:Name="SaveButton"
        Text="Save"
        Clicked="OnSave"
        IsEnabled="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>