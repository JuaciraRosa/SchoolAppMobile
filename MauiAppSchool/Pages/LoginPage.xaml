<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.LoginPage"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        <Button Text="Sign in" Clicked="OnLogin"/>
        <Label x:Name="Msg" TextColor="Red" IsVisible="False"/>
  

        <BoxView HeightRequest="1" Opacity="0.15" Margin="0,12"/>
    
            <Button Text="Forgot password"
          Clicked="OnForgotPassword"
          BackgroundColor="{DynamicResource SecondaryColor}"
          TextColor="White"/>

        <Button Text="Reset password (have a token)"
          Clicked="OnResetPassword"
          BackgroundColor="{DynamicResource SecondaryColor}"
          TextColor="White"/>

        <Button Text="Continue as guest"
          Clicked="OnGuest"
          BackgroundColor="{DynamicResource TertiaryColor}"
          TextColor="Black"/>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>