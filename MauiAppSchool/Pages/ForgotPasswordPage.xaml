<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ForgotPasswordPage"
             Title="ForgotPasswordPage">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>

            <Button Text="Send reset email" Clicked="OnSend"/>

            <Label x:Name="Msg" TextColor="Green" IsVisible="False"/>
            <Label x:Name="Err" TextColor="Red" IsVisible="False"/>

            <!-- Mantém a opção de abrir o site, se preferires -->
            <Button Text="Open website (Forgot)"
                    Clicked="OpenForgotOnWeb"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>