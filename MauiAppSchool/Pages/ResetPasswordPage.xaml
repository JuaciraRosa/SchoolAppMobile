<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ResetPasswordPage"
             Title="ResetPasswordPage">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="CodeEntry" Placeholder="Paste the code from the email"/>
            <Entry x:Name="NewPwdEntry" Placeholder="New password" IsPassword="True"/>

            <Button Text="Reset" Clicked="OnReset"/>

            <Label x:Name="Msg" TextColor="Green" IsVisible="False"/>
            <Label x:Name="Err" TextColor="Red" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>