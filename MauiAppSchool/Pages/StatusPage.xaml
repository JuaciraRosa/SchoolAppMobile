<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.StatusPage"
             Title="StatusPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="GoHome"/>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="List" Margin="16">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="0,6" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="{Binding Subject}" FontAttributes="Bold"/>
                        <Label Text="{Binding Status}" />
                        <Label Text="{Binding Average, StringFormat='Average: {0}'}" />
                        <Label Text="{Binding PassThreshold, StringFormat='Threshold: {0}'}" />
                        <Label Text="{Binding Absences, StringFormat='Absences: {0}'}" />
                        <Label Text="{Binding MaxAbsences, StringFormat='Max: {0}'}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>