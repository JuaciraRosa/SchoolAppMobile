<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ProfilePage"
             Title="ProfilePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="GoHome"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="16" Spacing="8">
        <Image x:Name="Photo" HeightRequest="120" WidthRequest="120"/>
        <Entry x:Name="FullName" Placeholder="Full name"/>
        <Entry x:Name="PhotoUrl" Placeholder="Photo URL"/>
        <Button Text="Save" Clicked="OnSave"/>
        <Label x:Name="Email" />
        <Label x:Name="Role" />
    </VerticalStackLayout>
</ContentPage>