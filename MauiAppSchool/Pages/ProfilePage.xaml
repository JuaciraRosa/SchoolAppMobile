<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ProfilePage"
             Title="ProfilePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="GoHome"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Avatar redondo com sombra e gesto de toque -->
            <Grid HorizontalOptions="Center">
                <Border StrokeShape="RoundRectangle 120"
                HeightRequest="120" WidthRequest="120"
                BackgroundColor="{DynamicResource SecondaryColor}"
                Shadow="5,5,10,0.25">
                    <!-- mantÃ©m o MESMO x:Name="Photo" -->
                    <Image x:Name="Photo" Aspect="AspectFill">
                        <Image.Clip>
                            <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60"/>
                        </Image.Clip>
                    </Image>
                </Border>

                <!-- Ã­cone sobreposto (opcional) sÃ³ pra indicar toque -->
                <Border StrokeShape="RoundRectangle 16"
                BackgroundColor="#66000000"
                HorizontalOptions="End" VerticalOptions="End"
                TranslationX="6" TranslationY="6"
                Padding="4">
                    <Label Text="ðŸ“·" FontSize="12" TextColor="White"/>
                </Border>

                <!-- toque para trocar a foto -->
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OnChangePhoto"/>
                </Grid.GestureRecognizers>
            </Grid>

            <Label Text="Tap the photo to change"
             FontSize="12" Opacity="0.6" HorizontalTextAlignment="Center"/>

            <!-- mantÃ©m os mesmos nomes -->
            <Entry x:Name="FullName" Placeholder="Full name"/>
            <Entry x:Name="PhotoUrl" Placeholder="Photo URL"/>

            <Button Text="Save" Clicked="OnSave" />

            <Frame Padding="12" HasShadow="True">
                <VerticalStackLayout Spacing="4">
                    <Label x:Name="Email"/>
                    <Label x:Name="Role"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
