<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.ProfilePage"
             Title="ProfilePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="GoHome"/>
        <ToolbarItem Text="Edit on Web" Clicked="OpenEditProfileOnWeb"/>
        <ToolbarItem Text="Change Password" Clicked="OpenChangePasswordOnWeb"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- avatar redondo -->
            <Grid HorizontalOptions="Center" WidthRequest="120" HeightRequest="120">
                <Image x:Name="Photo" Aspect="AspectFill">
                    <Image.Clip>
                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60"/>
                    </Image.Clip>
                    <Image.GestureRecognizers>
                        <!-- Troca para abrir a tela de troca de foto -->
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OpenChangePhotoInApp"/>
                    </Image.GestureRecognizers>
                </Image>

                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="#66000000"
                        HorizontalOptions="End" VerticalOptions="End"
                        Padding="4" Margin="4">
                    <Label Text="ðŸ“·" FontSize="12" TextColor="White"/>
                </Border>
            </Grid>

            <Label Text="Tap the photo to change"
                   FontSize="12" Opacity="0.6" HorizontalTextAlignment="Center"/>

            <Entry x:Name="FullName" Placeholder="Full name"/>
            <Entry x:Name="PhotoUrl" Placeholder="Photo URL" IsVisible="False"/>

            <Button Text="Save" Clicked="OnSave" />

            <!-- (opcional) botÃ£o explÃ­cito -->
            <!--<Button Text="Change photo (in-app)" Clicked="OpenChangePhotoInApp" />-->

            <Frame Padding="12" HasShadow="True">
                <VerticalStackLayout Spacing="4">
                    <Label x:Name="Email"/>
                    <Label x:Name="Role"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
