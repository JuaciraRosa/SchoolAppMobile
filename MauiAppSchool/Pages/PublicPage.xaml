<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSchool.Pages.PublicPage"
             Title="PublicPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Home" Clicked="GoHome"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="Courses" FontAttributes="Bold" FontSize="18"/>
            <Picker x:Name="CoursePicker" Title="Select a course" SelectedIndexChanged="OnCourseChanged"/>
            <Label Text="Subjects" FontAttributes="Bold" FontSize="18"/>
            <CollectionView x:Name="SubjectsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="0,6">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                <Label Text="{Binding TotalLessons, StringFormat='Lessons: {0}'}"/>
                                <Button Text="Request enrollment" Clicked="OnEnroll" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>