<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppSchoolMaui.ViewModels"
             x:DataType="vm:ChangePasswordVm"
             x:Class="AppSchoolMaui.Pages.ChangePasswordPage"
             Title="Change password">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- current -->
            <Entry x:Name="CurrentEntry"
           Placeholder="Current password"
           IsPassword="True"
           Text="{Binding Current}" />

            <!-- new -->
            <Entry x:Name="New1Entry"
           Placeholder="New password"
           IsPassword="True"
           Text="{Binding New1}" />

            <!-- confirm -->
            <Entry x:Name="New2Entry"
           Placeholder="Confirm new password"
           IsPassword="True"
           Text="{Binding New2}" />

            <!-- << NOVO: mostrar/ocultar todas as passwords >> -->
            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <CheckBox x:Name="ShowPwCheck" CheckedChanged="OnShowPwChanged"/>
                <Label Text="Show passwords" VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>

            <Button Text="Change" Command="{Binding ChangeCommand}" />

            <Label Text="{Binding Msg}" TextColor="Red" IsVisible="{Binding HasMsg}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
