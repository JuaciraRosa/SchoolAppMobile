<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSchoolMaui.Pages.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}"/>
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Sign in" Command="{Binding LoginCommand}"/>
            <Label Text="{Binding Msg}" TextColor="Red" IsVisible="{Binding HasMsg}" />
            <BoxView HeightRequest="1" Opacity="0.15" Margin="0,12"/>
            <Button Text="Forgot password (website)" Command="{Binding ForgotCommand}" />
            <Button Text="Continue as guest" Command="{Binding GuestCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>