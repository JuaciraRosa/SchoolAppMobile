<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppSchoolMaui.Pages.AbsencesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="16" Spacing="10">

    
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,6">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <Label Text="{Binding Subject}" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd HH:mm}'}"  Grid.Row="0" Grid.Column="1"/>
                            <Label Text="{Binding Justified}" Grid.Row="1" Grid.Column="0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
