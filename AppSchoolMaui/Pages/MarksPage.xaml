<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSchoolMaui.Pages.MarksPage"
             Title="MarksPage">

    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="12,6" Padding="12" HasShadow="True" CornerRadius="12">
                  
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
                      
                        <Image Grid.RowSpan="2" Grid.Column="0"
                 Source="grade.png" WidthRequest="26" HeightRequest="26"/>

                      
                        <Label Grid.Row="0" Grid.Column="1"
                 Text="{Binding Subject}" FontAttributes="Bold" FontSize="16"
                 LineBreakMode="TailTruncation" />
                        <Label Grid.Row="0" Grid.Column="2"
                 Text="{Binding Value, StringFormat='{0:0.#}'}"
                 FontAttributes="Bold" FontSize="18"
                 HorizontalTextAlignment="End" />

                     
                        <Label Grid.Row="1" Grid.Column="1"
                 Text="{Binding EvaluationType}" Opacity="0.75"/>
                        <Label Grid.Row="1" Grid.Column="2"
                 Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                 Opacity="0.75" HorizontalTextAlignment="End"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>



</ContentPage>