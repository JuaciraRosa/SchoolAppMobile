<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppSchoolMaui.ViewModels"
             x:DataType="vm:ResetPasswordVm"
             x:Class="AppSchoolMaui.Pages.ResetPasswordPage"
             Title="Reset password">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}" />

            <!-- aceita link inteiro ou apenas o token -->
            <Editor Placeholder="Token (ou cole o link completo do e-mail)"
              AutoSize="TextChanges" HeightRequest="80"
              Text="{Binding TokenRaw}" />

            <Entry x:Name="New1Entry" Placeholder="New password"     IsPassword="True" Text="{Binding New1}" />
            <Entry x:Name="New2Entry" Placeholder="Confirm password" IsPassword="True" Text="{Binding New2}" />

            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                <CheckBox CheckedChanged="OnShowPwChanged" />
                <Label Text="Show passwords" VerticalTextAlignment="Center"/>
            </HorizontalStackLayout>

            <Button Text="Reset" Command="{Binding ResetCommand}" />
            <Label Text="{Binding Msg}" TextColor="Red" IsVisible="{Binding HasMsg}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
